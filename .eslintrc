{
  "extends": ["eslint:recommended"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "legacyDecorators": true,
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "no-undef": "off",
    "quotes": ["warn", "single", { "allowTemplateLiterals": true }],
    "eol-last": ["warn", "always"],
    "indent": ["warn", 2]
  }
}